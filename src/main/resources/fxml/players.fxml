<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="fr.hockey.controllers.PlayersController"
      spacing="10.0" alignment="TOP_CENTER">
    
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>
    
    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <Label text="Gestion des Joueurs" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <ComboBox fx:id="categoryFilter" promptText="Filtrer par catégorie"/>
        <ComboBox fx:id="positionFilter" promptText="Filtrer par poste"/>
        <Button fx:id="addButton" text="Ajouter un joueur" onAction="#handleAddPlayer"
                style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
    </HBox>
    
    <TableView fx:id="playersTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="firstNameColumn" text="Prénom" prefWidth="150"/>
            <TableColumn fx:id="lastNameColumn" text="Nom" prefWidth="150"/>
            <TableColumn fx:id="categoryColumn" text="Catégorie" prefWidth="100"/>
            <TableColumn fx:id="roleColumn" text="Rôle" prefWidth="100"/>
            <TableColumn fx:id="positionColumn" text="Poste" prefWidth="100"/>
            <TableColumn fx:id="licenseStatusColumn" text="Licence" prefWidth="100"/>
            <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="145"/>
        </columns>
    </TableView>
    
    <HBox spacing="10.0" alignment="CENTER_RIGHT">
    </HBox>
    
    <!-- Formulaire d'ajout/modification (initialement caché) -->
    <VBox fx:id="formContainer" visible="false" managed="false" spacing="10.0" style="-fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-padding: 10;">
        <Label text="Informations du joueur" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="250" />
            </columnConstraints>
            
            <Label text="Prénom:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="firstNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            
            <Label text="Nom:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="lastNameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            
            <Label text="Catégorie:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <ComboBox fx:id="categoryCombo" GridPane.rowIndex="2" GridPane.columnIndex="1" maxWidth="Infinity"/>
            
            <Label text="Rôle:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <ComboBox fx:id="roleCombo" GridPane.rowIndex="3" GridPane.columnIndex="1" maxWidth="Infinity"/>
            
            <Label text="Poste:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <ComboBox fx:id="positionCombo" GridPane.rowIndex="4" GridPane.columnIndex="1" maxWidth="Infinity"/>
        </GridPane>
        
        <HBox spacing="10.0" alignment="CENTER_RIGHT">
            <Button fx:id="cancelButton" text="Annuler" onAction="#handleCancel"/>
            <Button fx:id="saveButton" text="Enregistrer" onAction="#handleSave"
                    style="-fx-background-color: #2980b9; -fx-text-fill: white;"/>
        </HBox>
    </VBox>
</VBox>