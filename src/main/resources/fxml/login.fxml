<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="fr.hockey.controllers.LoginController"
            prefHeight="400.0" prefWidth="600.0"
            styleClass="login-panel">
    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <Label text="Gestionnaire de Licences et Équipes" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Label text="Club de Hockey" style="-fx-font-size: 18px;"/>
            
            <VBox alignment="CENTER" spacing="10.0" maxWidth="400.0">
                <TextField fx:id="usernameField" promptText="Nom d'utilisateur" maxWidth="300.0"/>
                <PasswordField fx:id="passwordField" promptText="Mot de passe" maxWidth="300.0"/>
                <Button fx:id="loginButton" text="Connexion" onAction="#handleLogin" maxWidth="300.0" 
                        style="-fx-background-color: -app-button-bg; -fx-text-fill: -app-on-accent;"/>
                <Label fx:id="errorLabel" textFill="RED" visible="false"/>
            </VBox>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER">
            <padding>
                <Insets bottom="10.0"/>
            </padding>
            <Label text="© 2025 - BTS SIO - Projet Hockey Club Manager"/>
        </HBox>
    </bottom>
</BorderPane>