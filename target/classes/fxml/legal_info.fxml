<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="fr.hockey.controllers.LegalInfoController"
            style="-fx-background-color: -app-bg;">
    <top>
        <HBox spacing="10" style="-fx-padding: 16;" alignment="CENTER_LEFT">
            <Label text="Informations Légales du Club" style="-fx-font-size: 22px; -fx-text-fill: -app-fg; -fx-font-weight: bold;"/>
            <Pane HBox.hgrow="ALWAYS" />
            <Button text="Modifier" fx:id="editButton" onAction="#handleEdit" style="-fx-background-color: -app-button-bg; -fx-text-fill: -app-on-accent;" />
        </HBox>
    </top>
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: transparent;">
            <content>
                <StackPane>
                    <!-- Vue lecture seule -->
                    <VBox fx:id="viewPane" spacing="16" style="-fx-padding: 24;">
                        <GridPane hgap="10" vgap="10">
                            <columnConstraints>
                                <ColumnConstraints halignment="RIGHT" minWidth="120" />
                                <ColumnConstraints hgrow="ALWAYS" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="28" />
                                <RowConstraints minHeight="28" />
                                <RowConstraints minHeight="28" />
                                <RowConstraints minHeight="28" />
                                <RowConstraints minHeight="28" />
                                <RowConstraints minHeight="28" />
                            </rowConstraints>

                            <Label text="Dénomination:" style="-fx-text-fill: -app-fg;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                            <Label fx:id="nameLabel" style="-fx-text-fill: -app-fg;" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                            <Label text="Adresse:" style="-fx-text-fill: -app-fg;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                            <Label fx:id="addressLabel" style="-fx-text-fill: -app-fg;" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                            <Label text="N° enregistrement:" style="-fx-text-fill: -app-fg;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                            <Label fx:id="regNoLabel" style="-fx-text-fill: -app-fg;" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                            <Label text="Responsable de publication:" style="-fx-text-fill: -app-fg;" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                            <Label fx:id="publisherLabel" style="-fx-text-fill: -app-fg;" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                            <Label text="Hébergement:" style="-fx-text-fill: -app-fg;" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                            <Label fx:id="hostingLabel" style="-fx-text-fill: -app-fg;" GridPane.rowIndex="4" GridPane.columnIndex="1" />

                            <Label text="Contact:" style="-fx-text-fill: -app-fg;" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                            <Label fx:id="contactLabel" style="-fx-text-fill: -app-fg;" GridPane.rowIndex="5" GridPane.columnIndex="1" />
                        </GridPane>

                        <Label text="Politique de confidentialité" style="-fx-text-fill: -app-fg; -fx-font-weight: bold;"/>
                        <!-- Affichage simple du contenu, sans zone de texte -->
                        <Label fx:id="privacyLabel" wrapText="true" style="-fx-text-fill: -app-fg;" />

                        <!-- Cacher le message de statut en vue lecture -->
                        <Label fx:id="statusLabel" style="-fx-text-fill: -app-fg;" visible="false" managed="false" />
                    </VBox>

                    <!-- Vue édition (formulaire) -->
                    <VBox fx:id="editPane" spacing="16" style="-fx-padding: 24;">
                        <GridPane hgap="10" vgap="10">
                            <columnConstraints>
                                <ColumnConstraints halignment="RIGHT" minWidth="120" />
                                <ColumnConstraints hgrow="ALWAYS" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="28" />
                                <RowConstraints minHeight="28" />
                                <RowConstraints minHeight="28" />
                                <RowConstraints minHeight="28" />
                                <RowConstraints minHeight="28" />
                                <RowConstraints minHeight="28" />
                            </rowConstraints>

                            <Label text="Dénomination:" style="-fx-text-fill: -app-fg;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                            <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                            <Label text="Adresse:" style="-fx-text-fill: -app-fg;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                            <TextField fx:id="addressField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                            <Label text="N° enregistrement:" style="-fx-text-fill: -app-fg;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                            <TextField fx:id="regNoField" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                            <Label text="Responsable de publication:" style="-fx-text-fill: -app-fg;" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                            <TextField fx:id="publisherField" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                            <Label text="Hébergement:" style="-fx-text-fill: -app-fg;" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                            <TextField fx:id="hostingField" GridPane.rowIndex="4" GridPane.columnIndex="1" />

                            <Label text="Contact:" style="-fx-text-fill: -app-fg;" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                            <TextField fx:id="contactField" GridPane.rowIndex="5" GridPane.columnIndex="1" />
                        </GridPane>

                        <Label text="Politique de confidentialité" style="-fx-text-fill: -app-fg; -fx-font-weight: bold;"/>
                        <TextArea fx:id="privacyArea" prefRowCount="6" wrapText="true" />

                        <HBox spacing="10">
                            <Button text="Enregistrer" fx:id="saveButton" onAction="#handleSave" style="-fx-background-color: -app-button-bg; -fx-text-fill: -app-on-accent;" />
                            <Button text="Annuler" fx:id="cancelButton" onAction="#handleCancel" />
                        </HBox>
                    </VBox>
                </StackPane>
            </content>
        </ScrollPane>
    </center>
</BorderPane>