<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="fr.hockey.controllers.RevenueController"
      spacing="10.0" alignment="TOP_CENTER">

    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <Label text="Revenus des Licences" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="roleInfoLabel" text=""/>
    </HBox>

    <TableView fx:id="revenueTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="categoryColumn" text="Catégorie" prefWidth="120"/>
            <TableColumn fx:id="paidCountColumn" text="# Payées" prefWidth="90"/>
            <TableColumn fx:id="paidTotalColumn" text="Total Payé (€)" prefWidth="120"/>
            <TableColumn fx:id="unpaidCountColumn" text="# Non Payées" prefWidth="110"/>
            <TableColumn fx:id="unpaidTotalColumn" text="Total Non Payé (€)" prefWidth="140"/>
            <TableColumn fx:id="expectedTotalColumn" text="Total Attendu (€)" prefWidth="140"/>
        </columns>
    </TableView>

    <HBox spacing="10.0" alignment="CENTER_RIGHT">
        <Label fx:id="totalsLabel" text=""/>
        <Region HBox.hgrow="ALWAYS"/>
    </HBox>

</VBox>