<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="fr.hockey.controllers.LicenseController"
      spacing="10.0" alignment="TOP_CENTER">

    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <Label text="Gestion des Licences" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="roleInfoLabel" text=""/>
    </HBox>

    <TableView fx:id="playersTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="playerNameColumn" text="Joueur" prefWidth="200"/>
            <TableColumn fx:id="categoryColumn" text="Catégorie" prefWidth="100"/>
            <TableColumn fx:id="licensePaidColumn" text="Statut" prefWidth="100"/>
            <TableColumn fx:id="expirationColumn" text="MAJ" prefWidth="120"/>
            <TableColumn fx:id="amountColumn" text="Montant (€)" prefWidth="100"/>
            <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="310"/>
        </columns>
    </TableView>

    <HBox spacing="10.0" alignment="CENTER_RIGHT">
    </HBox>

</VBox>
