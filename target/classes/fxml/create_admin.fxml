<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import java.lang.String?>


<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="fr.hockey.controllers.CreateAdminController" spacing="10" alignment="TOP_LEFT">
    <padding>
        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
    </padding>
    <children>
        <Label text="Créer un admin" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="120"/>
                <ColumnConstraints halignment="LEFT" hgrow="ALWAYS"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="30"/>
                <RowConstraints minHeight="30"/>
                <RowConstraints minHeight="30"/>
                <RowConstraints minHeight="30"/>
                <RowConstraints minHeight="30"/>
                <RowConstraints minHeight="30"/>
            </rowConstraints>
            <children>
                <Label text="Nom d'utilisateur:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="usernameField" promptText="ex: admin2" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Mot de passe:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <PasswordField fx:id="passwordField" promptText="mot de passe" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Prénom:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="firstNameField" promptText="Prénom" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Nom:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="lastNameField" promptText="Nom" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Email:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="emailField" promptText="email@club.fr" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </children>
        </GridPane>
        <HBox spacing="10">
            <children>
                <Button fx:id="createButton" text="Créer" onAction="#handleCreate"/>
                <Label fx:id="statusLabel" style="-fx-text-fill: red;"/>
            </children>
        </HBox>
    </children>
</VBox>