<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="fr.hockey.controllers.MatchFormController"
      spacing="12" alignment="TOP_LEFT" style="-fx-padding: 16;">
    <children>
        <Label text="Formulaire de feuille de match" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints minWidth="120" halignment="RIGHT" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>

            <Label text="Catégorie:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <ComboBox fx:id="categoryCombo" prefWidth="200" GridPane.rowIndex="0" GridPane.columnIndex="1" />

            <Label text="Date du match:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <DatePicker fx:id="matchDatePicker" GridPane.rowIndex="1" GridPane.columnIndex="1" />

            <Label text="Adversaire:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <TextField fx:id="opponentField" promptText="Nom de l'adversaire" GridPane.rowIndex="2" GridPane.columnIndex="1" />
        </GridPane>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Label fx:id="statusLabel" text="" />
            <Region HBox.hgrow="ALWAYS" />
            <Button text="Générer PDF" onAction="#handleSubmit" />
            <Button text="Annuler" onAction="#handleCancel" />
        </HBox>
    </children>
</VBox>