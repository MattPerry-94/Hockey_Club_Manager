<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="fr.hockey.controllers.CoachesController"
      spacing="10.0" alignment="TOP_CENTER">

    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <Label text="Gestion des Coachs" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="addCoachButton" text="Ajouter un coach" onAction="#handleAddCoach"
                style="-fx-background-color: -app-button-bg; -fx-text-fill: -app-on-accent;"/>
        <Label fx:id="roleInfoLabel" text=""/>
    </HBox>

    <!-- Formulaire de création de coach (même structure que joueurs) -->
    <VBox fx:id="coachFormContainer" visible="false" managed="false" spacing="10.0" alignment="TOP_LEFT" style="-fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-padding: 10;">
        <Label text="Informations du coach" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="250" />
            </columnConstraints>

            <Label text="Nom d'utilisateur:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="coachUsernameField" promptText="Nom d'utilisateur" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Mot de passe:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <PasswordField fx:id="coachPasswordField" promptText="Mot de passe" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Prénom:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="coachFirstNameField" promptText="Prénom" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Nom:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="coachLastNameField" promptText="Nom" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Email:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="coachEmailField" promptText="email@club.fr" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Catégorie coachée:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <ComboBox fx:id="coachCategoryCombo" promptText="Sélectionner la catégorie" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
        </GridPane>

        <HBox spacing="10.0" alignment="CENTER_RIGHT">
            <Button fx:id="cancelCreateCoachButton" text="Annuler" onAction="#handleCancelCreateCoach"
                    style="-fx-background-color: -app-button-bg; -fx-text-fill: -app-on-accent;"/>
            <Button fx:id="createCoachButton" text="Enregistrer" onAction="#handleCreateCoach"
                    style="-fx-background-color: -app-button-bg; -fx-text-fill: -app-on-accent;"/>
        </HBox>
        <Label fx:id="createStatusLabel" text=""/>
    </VBox>

    <TableView fx:id="coachesTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="firstNameColumn" text="Prénom" prefWidth="180"/>
            <TableColumn fx:id="lastNameColumn" text="Nom" prefWidth="180"/>
            <TableColumn fx:id="teamsColumn" text="Équipe" prefWidth="260"/>
            <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="150"/>
        </columns>
    </TableView>

</VBox>